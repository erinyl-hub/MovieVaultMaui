<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MovieVaultMaui.Views.PopupViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PopupViewPage"
    BackgroundColor="Transparent">

    <AbsoluteLayout>

        <BoxView
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            AbsoluteLayout.LayoutFlags="All"
            Color="Transparent">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="ClosePopupClicked" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <Image
            AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.5, 0.8"
            AbsoluteLayout.LayoutFlags="All"
            Aspect="AspectFill"
            Source="bakrund2266.png" />

        <Frame
            x:Name="PopupFrame"
            AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.5, 0.8"
            AbsoluteLayout.LayoutFlags="All"
            Background="Transparent"
            BorderColor="White">

            <ScrollView>

                <Grid Background="Transparent" RowDefinitions="Auto,Auto,Auto,Auto, Auto, Auto, Auto, Auto,Auto,Auto,30,Auto,Auto ,100">

                    <Label
                        Grid.Row="0"
                        Padding="20"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="End"
                        Text="{Binding Year}"
                        TextColor="White">
                        <Label.Shadow>
                            <Shadow
                                Brush="Black"
                                Radius="3"
                                Offset="3,1" />
                        </Label.Shadow>
                    </Label>

                    <Label
                        x:Name="MovieLength"
                        Grid.Row="0"
                        Padding="20"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text=""
                        TextColor="White">

                        <Label.Shadow>
                            <Shadow
                                Brush="Black"
                                Radius="3"
                                Offset="3,1" />
                        </Label.Shadow>
                    </Label>

                    <Label
                        Grid.Row="1"
                        Padding="20"
                        FontAttributes="Bold"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="{Binding Title}"
                        TextColor="White">
                        <Label.Shadow>
                            <Shadow
                                Brush="Black"
                                Radius="3"
                                Offset="3,1" />
                        </Label.Shadow>
                    </Label>

                    <Label
                        Grid.Row="2"
                        Padding="20"
                        Background="Transparent"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="{Binding imdbRating, StringFormat='Rating: {0}'}"
                        TextColor="White">
                        <Label.Shadow>
                            <Shadow
                                Brush="Black"
                                Radius="3"
                                Offset="3,1" />
                        </Label.Shadow>
                    </Label>

                    <Image
                        Grid.Row="3"
                        BackgroundColor="Transparent"
                        HeightRequest="350"
                        HorizontalOptions="Center"
                        Source="{Binding Poster}"
                        WidthRequest="400">
                        <Image.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="3"
                                Radius="20"
                                Offset="9,5" />
                        </Image.Shadow>
                    </Image>

                    <CollectionView
                        x:Name="GenresCollectionView"
                        Grid.Row="4"
                        Margin="25"
                        HorizontalOptions="Center"
                        SelectionMode="Single">

                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="1" Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                    Margin="0"
                                    Padding="10"
                                    BackgroundColor="Transparent"
                                    BorderColor="White"
                                    CornerRadius="10"
                                    WidthRequest="120">
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="{Binding .}"
                                        TextColor="White"
                                        VerticalOptions="Center">
                                        <Label.Shadow>
                                            <Shadow
                                                Brush="Black"
                                                Radius="3"
                                                Offset="3,1" />
                                        </Label.Shadow>
                                    </Label>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Frame
                        Grid.Row="5"
                        BackgroundColor="Transparent"
                        HasShadow="True"
                        WidthRequest="300">

                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            LineBreakMode="WordWrap"
                            Text="{Binding Plot}"
                            TextColor="White">
                            <Label.Shadow>
                                <Shadow
                                    Brush="Black"
                                    Radius="6"
                                    Offset="1,2" />
                            </Label.Shadow>
                        </Label>
                    </Frame>

                    <Label
                        Grid.Row="6"
                        Padding="10"
                        FontAttributes="Bold"
                        FontSize="14"
                        HorizontalOptions="Center"
                        LineBreakMode="WordWrap"
                        Text="Director"
                        TextColor="White">
                        <Label.Shadow>
                            <Shadow
                                Brush="Black"
                                Radius="6"
                                Offset="1,2" />
                        </Label.Shadow>
                    </Label>

                    <Frame
                        Grid.Row="7"
                        Margin="0"
                        Padding="10"
                        BackgroundColor="Transparent"
                        BorderColor="White"
                        CornerRadius="10"
                        HeightRequest="40"
                        WidthRequest="170">


                        <Label
                            Padding="0,0,0,20"
                            FontAttributes="Bold"
                            FontSize="13"
                            HorizontalOptions="Center"
                            Text="{Binding Director}"
                            TextColor="White"
                            VerticalOptions="Center">
                            <Label.Shadow>
                                <Shadow
                                    Brush="Black"
                                    Radius="6"
                                    Offset="1,2" />
                            </Label.Shadow>
                        </Label>

                    </Frame>



                    <Label
                        Grid.Row="8"
                        Padding="10"
                        FontAttributes="Bold"
                        FontSize="14"
                        HorizontalOptions="Center"
                        LineBreakMode="WordWrap"
                        Text="Actors"
                        TextColor="White">
                        <Label.Shadow>
                            <Shadow
                                Brush="Black"
                                Radius="6"
                                Offset="1,2" />
                        </Label.Shadow>
                    </Label>

                    <CollectionView
                        x:Name="ActorsCollectionView"
                        Grid.Row="9"
                        HorizontalOptions="Start"
                        SelectionMode="Single">

                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="1" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                    Margin="0"
                                    Padding="10"
                                    BackgroundColor="Transparent"
                                    BorderColor="White"
                                    CornerRadius="10"
                                    WidthRequest="170">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="{Binding .}"
                                        TextColor="White"
                                        VerticalOptions="Center">
                                        <Label.Shadow>
                                            <Shadow
                                                Brush="Black"
                                                Radius="3"
                                                Offset="3,1" />
                                        </Label.Shadow>
                                    </Label>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>



                    <Grid
                        x:Name="movieSeenGrid"
                        Grid.Row="11"
                        HorizontalOptions="Center"
                        RowDefinitions="Auto,Auto,10,200,50">

                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="User Rating" />

                        <Grid
                            Grid.Row="1"
                            HorizontalOptions="Center"
                            RowDefinitions="Auto, Auto">

                            <Label
                                x:Name="sliderValueLabel"
                                Grid.Row="0"
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalOptions="Center"
                                Text="1.0" />

                            <Slider
                                x:Name="valueSlider"
                                Value="{Binding UserData.UserRating}"
                                Grid.Row="1"
                                Maximum="10"
                                MaximumTrackColor="DarkGrey"
                                Minimum="1"
                                MinimumTrackColor="Black"
                                ThumbColor="Black"
                                ValueChanged="OnSliderValueChanged"
                                WidthRequest="180" />
                        </Grid>


                        <Editor
                            x:Name="userReviewEditor"
                            Text="{Binding UserData.UserReview}"
                            Grid.Row="3"
                            AutoSize="TextChanges"
                            Background="DarkGrey"
                            FontAttributes="Bold"
                            Placeholder="Enter Review..."
                            WidthRequest="400" />


                        <StackLayout
                            Grid.Row="4"
                            HorizontalOptions="Center"
                            Orientation="Horizontal">

                            <CheckBox
                                IsChecked="{Binding UserData.SeeAgain}"
                                x:Name="SeeAgain"
                                HorizontalOptions="Center"
                                Color="Black" />

                            <Label
                                FontAttributes="Bold"
                                Text="See again"
                                VerticalOptions="Center" />

                        </StackLayout>
                    </Grid>

                    <Button
                        x:Name="whatSafe"
                        Grid.Row="12"
                        BackgroundColor="Black"
                        Clicked="AddMovieBox"
                        FontAttributes="Bold"
                        HeightRequest="26"
                        HorizontalOptions="Center"
                        Text="Seen Movie"
                        WidthRequest="200" />


                </Grid>

            </ScrollView>

        </Frame>

    </AbsoluteLayout>

</ContentPage>