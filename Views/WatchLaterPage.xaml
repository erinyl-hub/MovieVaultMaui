<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MovieVaultMaui.WatchLaterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="WatchLaterPage">

    <ScrollView Background="Transparent">

        <Grid Background="Transparent">

            <Image
                Aspect="Fill"
                SemanticProperties.Description="Gray background with video camera logo"
                Source="bakrund2266.png" />

            <VerticalStackLayout Background="Transparent">

                <Grid
                    Padding="20"
                    Background="Transparent"
                    RowDefinitions="*,200, Auto, Auto">

                    <ImageButton
                        Grid.Row="0"
                        BackgroundColor="Transparent"
                        Clicked="OnBackClicked"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        Source="backarrow.png"
                        WidthRequest="50" />

                    <Image
                        x:Name="ConnectionImage"
                        Grid.Row="0"
                        HeightRequest="50"
                        HorizontalOptions="End"
                        WidthRequest="50" />

                    <Image
                        Grid.Row="1"
                        HeightRequest="600"
                        HorizontalOptions="Center"
                        Source="logotyp.png"
                        VerticalOptions="Center"
                        WidthRequest="500" />

                    <Grid
                        Grid.Row="2"
                        Padding="20"
                        Background="Transparent"
                        WidthRequest="1400">

                        <Grid
                            Background="Transparent"
                            HorizontalOptions="End"
                            WidthRequest="720">

                            <Entry
                                x:Name="SearchEntry"
                                BackgroundColor="Transparent"
                                FontAttributes="Bold"
                                HeightRequest="20"
                                HorizontalOptions="End"
                                Placeholder="Search..."
                                PlaceholderColor="Black"
                                TextChanged="SearchEntryChange"
                                WidthRequest="300" />

                            <Picker
                                x:Name="SearchOptionsPickerOnPage"
                                FontAttributes="Bold"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                ItemsSource="{Binding SearchOptionsPicker}"
                                SelectedIndex="0"
                                SelectedIndexChanged="OnPickerChanged"
                                WidthRequest="120" />

                        </Grid>

                        <Grid
                            Background="Transparent"
                            HorizontalOptions="Center"
                            WidthRequest="200">

                            <ImageButton
                                x:Name="GoForward"
                                Padding="5"
                                Background="Transparent"
                                Clicked="NextPage"
                                HeightRequest="60"
                                HorizontalOptions="End"
                                IsVisible="True"
                                Source="goforwardarrow.png"
                                WidthRequest="60" />

                            <ImageButton
                                x:Name="GoBackwards"
                                Padding="5"
                                Background="Transparent"
                                Clicked="PreviousPage"
                                HeightRequest="60"
                                HorizontalOptions="Start"
                                IsVisible="False"
                                Source="gobackwardsarrow.png"
                                WidthRequest="60" />

                        </Grid>

                        <Grid
                            Padding="20"
                            Background="Transparent"
                            HorizontalOptions="Start"
                            RowDefinitions="Auto"
                            WidthRequest="300">

                            <Picker
                                x:Name="SortOptionsPickerOnPage"
                                FontAttributes="Bold"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                ItemsSource="{Binding SortOptionsPicker}"
                                SelectedIndex="0"
                                SelectedIndexChanged="OnPickerChanged"
                                WidthRequest="150" />

                            <ImageButton
                                x:Name="ChangeOrder"
                                Padding="5"
                                Background="Transparent"
                                Clicked="ChangeOrderClicked"
                                HeightRequest="50"
                                HorizontalOptions="End"
                                Source="sortingarrows.png"
                                WidthRequest="25" />

                        </Grid>

                    </Grid>

                </Grid>

                <CollectionView
                    x:Name="MoviesToSeeCollectionView"
                    Background="Transparent"
                    SelectionChanged="OnItemSelected"
                    SelectionMode="Single">

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="7" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>

                        <DataTemplate>

                            <StackLayout
                                Padding="15"
                                Background="Transparent"
                                Orientation="Vertical">

                                <Label
                                    Padding="5"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    Text="{Binding imdbRating}" />

                                <Image
                                    BackgroundColor="Transparent"
                                    HeightRequest="150"
                                    HorizontalOptions="Center"
                                    Source="{Binding Poster}"
                                    WidthRequest="200">
                                    <Image.Shadow>
                                        <Shadow
                                            Brush="Black"
                                            Opacity="3"
                                            Radius="20"
                                            Offset="9,5" />
                                    </Image.Shadow>
                                </Image>

                                <Label
                                    Padding="15"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    Text="{Binding Title}" />

                            </StackLayout>

                        </DataTemplate>

                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>

        </Grid>
    </ScrollView>

</ContentPage>