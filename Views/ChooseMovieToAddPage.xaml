<ContentPage
    x:Class="MovieVaultMaui.ChooseMovieToAddPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ChooseMovieToAddPage">
    <VerticalStackLayout>
        <ScrollView>

            <Grid>
                <Image
                    Aspect="AspectFill"
                    SemanticProperties.Description="Gray background with video camera logo"
                    Source="bakrund2266.png" />

                <VerticalStackLayout>



                    <Grid Padding="20" RowDefinitions="*,200">

                        <ImageButton
                            Grid.Row="0"
                            BackgroundColor="Transparent"
                            Clicked="OnBackClicked"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            Source="backarrow.png"
                            WidthRequest="50" />

                        <Image
                            x:Name="ConnectionImage"
                            Grid.Row="0"
                            HeightRequest="50"
                            HorizontalOptions="End"
                            WidthRequest="50" />

                        <Image
                            Grid.Row="1"
                            HeightRequest="600"
                            HorizontalOptions="Center"
                            Source="logotyp.png"
                            VerticalOptions="Center"
                            WidthRequest="500" />


                    </Grid>


                    <Grid
                        Padding="50"
                        ColumnSpacing="250"
                        RowDefinitions="*,*,*"
                        RowSpacing="20">


                        <Entry
                            x:Name="ImdbEntry"
                            Grid.Row="0"
                            BackgroundColor="DarkGray"
                            FontAttributes="Bold"
                            Placeholder="Enter IMDB Url..."
                            PlaceholderColor="Black"
                            WidthRequest="600" />

                        <Button
                            x:Name="ImdbEntryButton"
                            Grid.Row="1"
                            BackgroundColor="DimGrey"
                            BorderColor="DarkGray"
                            BorderWidth="3"
                            Clicked="ImdbEntryButtonClicked"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            HorizontalOptions="Center"
                            Text="Find movie"
                            WidthRequest="150" />
                        <Label
                            x:Name="ErrorMsg"
                            Grid.Row="2"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="" />


                    </Grid>




                </VerticalStackLayout>


            </Grid>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>